<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAddCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Flashcard"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnStartQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Quiz"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="16dp"
        android:enabled="false"/>

    <TextView
        android:id="@+id/tvStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No flashcards created yet"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvCardCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Cards: 0"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvMasteredCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mastered Cards: 0"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvQuizStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz Score: N/A"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>


</LinearLayout>

