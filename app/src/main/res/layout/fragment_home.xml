<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1D1D1"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/account"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/baseline_account_circle_24"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Hello...Name"
        android:textStyle="bold"
        android:textColor="#4B2331"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
       android:textStyle="italic"
        android:text="Lets find a language that fits your goal.."
        android:textColor="#4B2331"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTv"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/searchCardView"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
       app:cardBackgroundColor="#FB7B53"
        app:cardCornerRadius="10dp"
       app:cardElevation="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:text="Learn Using Flash Card"
            android:textColor="#4A24A0"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Popular Languages"
        android:textStyle="bold"
        android:textColor="#4B2331"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchCardView"/>

    <TextView
        android:id="@+id/viewAlltv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:textColor="#3D5AFE"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/engCardView"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
       android:backgroundTint="#79DCAC"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:backgroundTint="#EDE0E6"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="see Language"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#3D5AFE"/>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/langCardView"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="@id/engCardView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#79DCAC"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/langCardView2"
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="200dp"
            android:backgroundTint="#79DCAC"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">



            <androidx.cardview.widget.CardView
                android:id="@+id/langCardView3"
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="200dp"
                android:backgroundTint="#79DCAC"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/langCardView4"
                    android:layout_width="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#EDE0E6"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="see Language"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="#3D5AFE"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Upcoming courses"
        android:textStyle="bold"
        android:textColor="#4B2331"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/engCardView"/>

    <TextView
        android:id="@+id/viewAlltv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:textColor="#3D5AFE"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv4" />

    <androidx.cardview.widget.CardView
        android:id="@+id/upcomingCourse1"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#79DCAC"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:backgroundTint="#EDE0E6"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="see Language"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#3D5AFE"/>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/upcomingCourse2"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/upcomingCourse1"
        app:layout_constraintBottom_toBottomOf="@id/upcomingCourse1"
       app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#79DCAC"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:backgroundTint="#EDE0E6"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="see Language"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#3D5AFE"/>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>